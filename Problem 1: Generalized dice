import random
def Ndice(s,t,n):
	print("trials =" , t)
	print("sides =", s)
	a = []
	di= []
	for k in range(0,n):
		print("dice_number=",k)
		for i in range(0,t):
			a.append(int(s*random.random()))
			b=0
			c=0
		for j in range(0,t):
				b = b + a[j]
				c = c + a[j]**2
		d =(c/t-b*b/t/t)
		print("standard deviation =" + str(d**0.5))
		print("mean =" + str(b/t))
		print("variance=" + str(d))
		di.append(a)
	print(di)
	
def run():
	Ndice(10,100,2)
	Ndice(20,100,2)
	
	
