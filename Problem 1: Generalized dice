def dice(s,t):
	t1 = time.clock()
	print("trials =" , t)
	print("sides =", s)
	a = []
	for i in range(0,t):
		a.append(1+int(s*random.random()))
	print(a)
	b=0
	c=0
	for j in range(0,t):
		b = b + a[j]
		c = c + a[j]**2
	d =(c/t-b*b/t/t)
	print("standard deviation =" + str(d**0.5))
	print("mean =" + str(b/t))
	print("variance=" + str(d))
	t2 = time.clock()
	print(t2-t1, "seconds")
	
def Ndice(s,t,n):
	for k in range(0,n):
		dice(s,t)
